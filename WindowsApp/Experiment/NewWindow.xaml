<Window x:Class="WindowsApp.Experiment.NewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WindowsApp.Experiment"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="NewWindow" Height="450" MinHeight="450" Width="800" MinWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <materialDesign:Card VerticalAlignment="Top" Grid.Row="0">
            <Menu >
                <MenuItem Header="Вернуться" Click="MenuItemExit_OnClick"/>
                <MenuItem Header="Создать" Click="MenuItemCreateEvent_OnClick"/>
            </Menu>
        </materialDesign:Card>
        <StackPanel Grid.Row="1" HorizontalAlignment="Left"
                    Margin="20" Background="Azure">
            <TextBlock Text="Название ивента"/> 
            <TextBox x:Name="TextBoxNameEvent" Width="100"/>
            <TextBlock Text="Дата назначения"/>
            <DatePicker x:Name="DatePickerEvent"/>
            <materialDesign:TimePicker />
        </StackPanel>
    </Grid>
</Window>
